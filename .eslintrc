{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "env": {
    "browser" : true,
    "mocha" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false,
    "expect" : false,
    "should" : false,
    "sinon"  : false
  },
  "rules": {
    "semi"                   : [2, "never"],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/*.spec.js*", "**/main.jsx"]}]
    # "import/no-unresolved": [2, { ignore: ['routes', 'components', 'layouts'] }]
  }
}
